<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/Blue_Gray_50"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/md_purple_100"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:padding="5dp"
                android:id="@+id/his_row_img"
                android:layout_width="75dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="75dp" />
            <TextView
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/his_row_time"
                android:text="00:00:00"
                android:gravity="center"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:singleLine="true"
                android:textColor="@color/accent"
                android:fontFamily="@font/ubuntu"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <TextView
                app:layout_constraintLeft_toRightOf="@id/his_row_img"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/his_row_time"
                android:id="@+id/his_row_title"
                android:text="ACTIVITY NAME HERE"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/primary"
                android:fontFamily="@font/ubuntu"
                android:layout_width="0dp"
                android:layout_height="20dp" />
            <TextView
                android:visibility="gone"
                android:id="@+id/his_row_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>